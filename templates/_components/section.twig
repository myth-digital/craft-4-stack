{#
   Section
   Outputs section layout with correct padding and container.

   @type {embed}
   @param {string} padding
   @param {string} class
   @param {bool} container

#}

{% set padding = padding ?? 'topBottom' %}
{% set paddingSize = paddingSize ?? 'base' %}

{% set paddingClass = {
    small: {
        top: 'pt-12',
        bottom: 'pb-12',
        topBottom: 'py-12',
        none: 'py-0'
    },
    base: {
        top: 'pt-14 md:pt-20 lg:pt-24',
        bottom: 'pb-14 md:pb-20 lg:pb-24',
        topBottom: 'py-14 md:py-20 lg:py-24',
        none: 'py-0'
    },
    large: {
        top: 'pt-20 md:pt-40',
        bottom: 'pb-20 md:pb-40',
        topBottom: 'py-20 md:py-40',
        none: 'py-0'
    }
} %}

<div class="page-block w-full {{ class is defined ? class }} {{ attribute(attribute(paddingClass, paddingSize), padding) }}">

    {% if container %}
        <div class="page-block--container">
    {% endif %}

    {% block sectionContent %}
    {% endblock %}

    {% if container %}
        </div>
    {% endif %}

</div>
